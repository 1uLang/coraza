    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
            {
                "name": "Test Suite",
                "type": "go",
                "request": "launch",
                "mode": "auto",
                "program": "${workspaceFolder}/cmd/testsuite/main.go",
                "cwd": "${workspaceFolder}",
                "args": [
                    "-path",
                    "${input:test_path}",
                    "-rules",
                    "${input:rules}"
                ]
            },
        {
            "name": "Sandbox",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sandbox/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "-crs", "${input:crs_path}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "crs_path",
            "description": "Path to CRS rules directory",
            "default": "${workspaceFolder}/../coreruleset/rules/",
            "type":"promptString"
        },
        {
            "id": "rules",
            "description": "Path to rules file",
            "default": "${workspaceFolder}/../coreruleset/rules/rules.conf",
            "type": "promptString"
        },
        {
            "id": "test_path",
            "description": "Path to test files",
            "default": "${workspaceFolder}/../coreruleset/rules/tests/regression/",
            "type": "promptString"
        }
    ]
}